FROM python:3.10-slim

WORKDIR /work

RUN apt-get update && \
    apt-get install -y fonts-noto-cjk fonts-noto git && \
    rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 開発ツール
RUN pip install --no-cache-dir pre-commit black ruff isort

# コード同期するからCOPYしない（開発ではvolumesでマウントする）
EXPOSE 8503

CMD ["streamlit", "run", "app/app.py", "--server.port=8503", "--server.address=0.0.0.0"]
